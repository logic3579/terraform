# GCP Terraform Variables Example
# Rename this file to terraform.tfvars and update with your values

# 项目配置
project_id   = "your_project_id"
project_name = "your_project_name"

# 默认区域配置
default_region = "asia-southeast1"
default_zone   = "asia-southeast1-a"

# 现有 VPC 配置
current_vpc_name = "your_vpc_name"

# 多区域子网配置
subnet_configs = {
  "europe-west1" = {
    subnet_name = "algorithm-ew1"
    region      = "europe-west1"
    zone        = "europe-west1-a"
  }
  "us-central1" = {
    subnet_name = "algorithm-uc1"
    region      = "us-central1"
    zone        = "us-central1-a"
  }
  "asia-southeast1" = {
    subnet_name = "algorithm-as1"
    region      = "asia-southeast1"
    zone        = "asia-southeast1-a"
  }
}

# VM 实例配置 - 支持每个实例完全定制化配置
vm_instances = {
  "europe-west1" = {
    instances = [
      {
        name         = "algorithm-ew1-vm1"
        machine_type = "custom-8-16384"  # 8 vCPU, 16GB RAM
        zone         = "europe-west1-a"
        image_family = "ubuntu-2204-lts"
        image_project = "ubuntu-os-cloud"
        disk_size    = 20
        disk_type    = "pd-balanced"
        network_tags = ["algorithm"]
      },
      {
        name         = "algorithm-ew1-vm2"
        machine_type = "custom-8-16384"  # 8 vCPU, 16GB RAM
        zone         = "europe-west1-b"
        image_family = "ubuntu-2204-lts"
        image_project = "ubuntu-os-cloud"
        disk_size    = 20
        disk_type    = "pd-balanced"
        network_tags = ["algorithm"]
      }
    ]
  }
